---
const siteName = 'One Page Sprint';
---

<header class="header">
  <div class="container">
    <nav class="header__nav">
      <a href="/" class="header__logo" aria-label="One Page Sprint - Home">
        <strong class="header__logo-text">{siteName}</strong>
      </a>

      <div class="header__actions">
        <a href="#pricing" class="btn btn--secondary btn--small btn-magnetic">
          View pricing
        </a>
        <a href="#contact" class="btn btn--primary btn--small btn-magnetic">
          Get a free quote
        </a>
      </div>
    </nav>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: var(--z-sticky);
    background: rgba(15, 15, 26, 0.8);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--color-border);
    transition: background var(--transition-base), border-color var(--transition-base);
  }

  .header__nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-3) 0;
  }

  .header__logo {
    text-decoration: none;
    position: relative;
  }

  .header__logo::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 2px;
    background: var(--gradient-primary);
    transform: scaleX(0);
    transform-origin: right;
    transition: transform var(--transition-base) var(--ease-out-cubic);
  }

  .header__logo:hover::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  .header__logo-text {
    font-size: 1.25rem;
    font-weight: 800;
    font-family: var(--font-display);
    color: var(--color-text-primary);
    letter-spacing: var(--letter-spacing-tight);
    background: var(--gradient-text);
    background-size: 200% auto;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient-shift 4s ease infinite;
  }

  @keyframes gradient-shift {
    0%, 100% { background-position: 0% center; }
    50% { background-position: 100% center; }
  }

  .header__actions {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  @media (max-width: 639px) {
    .header__logo-text {
      font-size: 1.125rem;
    }

    .header__actions {
      gap: var(--space-1);
    }

    .btn--small {
      padding: var(--space-2) var(--space-3);
      font-size: var(--text-small);
    }
  }
</style>
